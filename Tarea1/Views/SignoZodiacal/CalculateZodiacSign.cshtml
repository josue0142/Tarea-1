
@{
    ViewData["Title"] = "Calcular Signo Zodiacal";
}

<h1 style="text-align:center">Calcular Signo Zodiacal</h1>

<div class="col-6" style="margin-left:auto; margin-right:auto">
    <div>
        <form action="CalculateZodiacSign" method="post">

            <label for="date">Seleccione su fecha de nacimiento</label>
            <input type="date" id="date" name="datetime" class="form-control" />
            <hr />
            <button type="submit" class="btn btn-primary">Calcular</button>
        </form>
    </div>
    <hr />
    <div>
        <label>Su signo zodiacal es:</label>
        <label class="alert-danger form-control">
            @ViewBag.resultado
        </label>
    </div>
</div>


