
@{
    ViewData["Title"] = "Cálculo de Ecuación 2do Grado";
}

<h1 style="text-align:center">Cálculo de Ecuación 2do Grado</h1>

<div class="col-6" style="margin-left:auto; margin-right:auto">
    <div>
        <form action="EquationCalculate" method="post">

            <label for="varA">Primer valor (A)</label>
            <input type="number" id="varA" name="varA" value="" class="form-control" />

            <label for="varB">Segundo valor (B)</label>
            <input type="number" id="varB" name="varB" value="" class="form-control" />

            <label for="varC">Tercer valor (C)</label>
            <input type="number" id="varC" name="varC" value="" class="form-control"/>

            <hr />

            <button type="submit" class="btn btn-primary">Calcular</button>

        </form>
    </div>

    <div>
        <label>Los 2 Valores de X en la ecuación son:</label>
        <label class="alert-danger form-control">
            X1 = @ViewBag.ResultadoX1 y X2 = @ViewBag.ResultadoX2
        </label>
    </div>
</div>
